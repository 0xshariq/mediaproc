{
  "name": "@mediaproc/core",
  "version": "1.7.0",
  "description": "Core utilities for MediaProc CLI and Plugins",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./branding": {
      "import": "./dist/branding.js",
      "types": "./dist/branding.d.ts"
    },
    "./helpFormatter": {
      "import": "./dist/helpFormatter.js",
      "types": "./dist/helpFormatter.d.ts"
    },
    "./pathValidator": {
      "import": "./dist/pathValidator.js",
      "types": "./dist/pathValidator.d.ts"
    },
    "./explainFormatter": {
      "import": "./dist/explainFormatter.js",
      "types": "./dist/explainFormatter.d.ts"
    },
    "./supportedExtensions": {
      "import": "./dist/supportedExtensions.js",
      "types": "./dist/supportedExtensions.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "pnpm clean && pnpm build"
  },
  "keywords": [
    "mediaproc",
    "core",
    "utilities",
    "cli",
    "plugins"
  ],
  "author": {
    "name": "0xshariq",
    "url": "https://github.com/0xshariq"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xshariq/mediaproc.git",
    "directory": "core"
  }
}

{
  "name": "@mediaproc/document",
  "version": "1.0.0",
  "description": "Document processing plugin for mediaproc - PDF, DOCX, OCR",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mediaproc-document": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": ["dist", "bin"],
  "keywords": ["mediaproc", "pdf", "document", "ocr", "ghostscript"],
  "author": "Sharique Chaudhary",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "mediaproc": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  }
}

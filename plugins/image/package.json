{
  "name": "@mediaproc/image",
  "version": "1.0.0",
  "description": "Image processing plugin for mediaproc - powered by Sharp",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mediaproc-image": "./bin/cli.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "keywords": [
    "mediaproc",
    "image",
    "sharp",
    "resize",
    "convert",
    "optimize",
    "webp",
    "avif"
  ],
  "author": "Sharique Chaudhary",
  "license": "ISC",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "watch": "tsc --watch",
    "clean": "rm -rf dist",
    "prepublishOnly": "pnpm build",
    "test": "echo \"No tests yet\""
  },
  "dependencies": {
    "mediaproc": "workspace:*",
    "chalk": "^5.3.0",
    "commander": "^11.1.0",
    "ora": "^8.0.1",
    "sharp": "^0.33.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0"
  },
  "peerDependencies": {
    "@mediaproc/core": "^1.0.0"
  }
}

{
  "name": "@mediaproc/cli",
  "version": "0.8.0",
  "description": "Universal media processing CLI with plugin architecture",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mediaproc": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "build:all": "pnpm build && pnpm --filter '@mediaproc/*' build",
    "clean": "rm -rf dist",
    "clean:all": "pnpm clean && pnpm --filter '@mediaproc/*' clean",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "pnpm test && pnpm --filter '@mediaproc/*' test"
  },
  "keywords": [
    "media",
    "processor",
    "cli",
    "image",
    "video",
    "audio",
    "document",
    "ffmpeg",
    "sharp",
    "plugin"
  ],
  "author": {
    "name": "0xshariq",
    "url": "https://github.com/0xshariq"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xshariq/mediaproc.git"
  },
  "bugs": {
    "url": "https://github.com/0xshariq/mediaproc/issues"
  },
  "homepage": "https://github.com/0xshariq/mediaproc#readme",
  "engines": {
    "node": ">=22.0.0"
  }
}

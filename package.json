{
  "name": "mediaproc",
  "version": "0.1.0",
  "private": true,
  "description": "Universal media processing CLI with plugin architecture",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:all": "pnpm build --filter ./cli && pnpm build --filter ./core && pnpm --filter '@mediaproc/*' build",
    "clean": "rm -rf dist",
    "clean:all": "pnpm clean && pnpm --filter '@mediaproc/*' clean",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:all": "pnpm test && pnpm --filter '@mediaproc/*' test"
  },
  "keywords": [
    "media",
    "processor",
    "cli",
    "image",
    "video",
    "audio",
    "document",
    "ffmpeg",
    "sharp",
    "plugin"
  ],
  "author": {
    "name": "0xshariq",
    "url": "https://github.com/0xshariq"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0xshariq/mediaproc-cli.git"
  },
  "bugs": {
    "url": "https://github.com/0xshariq/mediaproc-cli/issues"
  },
  "homepage": "https://github.com/0xshariq/mediaproc-cli#readme",
  "engines": {
    "node": ">=22.0.0"
  },
  "dependencies": {
    "@gltf-transform/cli": "^4.2.1",
    "@gltf-transform/core": "^4.2.1",
    "@lottiefiles/dotlottie-web": "^0.61.0",
    "@mediaproc/core": "^1.2.2",
    "chalk": "^5.3.0",
    "commander": "^14.0.2",
    "execa": "^9.6.1",
    "ghostscript4js": "^3.2.3",
    "node-poppler": "^9.0.1",
    "ora": "^9.0.0",
    "shaka-player": "^4.16.12",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vitest": "^4.0.17"
  }
}
